<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.UserListActivity">

    <ImageButton
        android:id="@+id/backBtnUserList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/ic_black_color_back_24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userlistRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backBtnUserList"
        android:layout_margin="5dp"
        tools:listitem="@layout/card_view_userlist"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</RelativeLayout>